import requests

base_url = "https://pokeapi.co/api/v2/"

def get_pokemon_info(name):
    url = f"{base_url}pokemon/{name}"
    response = requests.get(url)
   
    if response.status_code == 200:
       pokemon_data = response.json()
       return pokemon_data
    else:
       print(f"Error: Unable to fetch data for {response.status_code}")

pokemon_name = "Umbreon"
pokemon_info = get_pokemon_info(pokemon_name)

if pokemon_info:
    print(f"Name: {pokemon_info['name'].capitalize()}")
    print(f"ID: {pokemon_info['id']}")
    # Height is in decimetres, weight is in hectograms according to the PokeAPI documentation
    height_m = pokemon_info['height'] / 10  # convert decimetres to metres
    weight_kg = pokemon_info['weight'] / 10  # convert hectograms to kilograms
    print(f"Height: {height_m} m")
    print(f"Weight: {weight_kg} kg")
